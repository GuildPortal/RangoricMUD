@model RangoricMUD.Characters.Models.CreateCharacterModel
<!-- ko if: Page() === 'Characters/Create' -->
<div>
    <div>
        <form data-bind="submit: Submit">
            <fieldset>
                <legend>Create a New Character</legend>
                @Html.LabelFor(t => t.Name)
                @Html.TextBoxFor(t => t.Name, new{data_bind="value: Name"})
                @Html.ValidationMessageFor(t => t.Name)
                <button type="submit">Create</button>
            </fieldset>
        </form>
    </div>
</div>
<!-- /ko -->